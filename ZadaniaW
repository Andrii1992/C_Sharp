using System;

namespace Test4
{
	class MainClass
	{
		public static void Main(string[] args)
		{

		

			Console.WriteLine("Silnia");

			int silnia;
			int n;
			n = Convert.ToInt32(Console.ReadLine());
			if (n <= 1) { Console.WriteLine("Silnia wynosi 1"); }
			else
			{
				silnia = n;
				for (int i = n-1; i > 0; i--) {
					silnia *= i;
				}

				Console.WriteLine("Silnia wynosi " + silnia);

			}

			Console.ReadKey();

		}
	}
}


