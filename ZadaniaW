using System;

namespace Test5
{
	class MainClass
	{
		public static void Main(string[] args)
		{
			char Sx1='S', Sx2 = 'O';
			string S3;

			S3 = Convert.ToString(Sx1) + Convert.ToString(Sx2) + Convert.ToString(Sx1) ;
			Console.WriteLine(S3);


			Console.ReadKey();
		}
	}
}



